<td><%= name %></td>
<% if(Users.show_admins){ %>
  <td>
    <% if(typeof(facility) != 'undefined'){ %>
      <a href="/facilities/<%= facility.id %>"><%= facility.name %></a>
    <% } %>
  </td>
<% } %>
<td><a href="tel:<%= phone %>"><%= phone %></a></td>
<td><a href="mailto:<%= email %>"><%= email %></a></td>
<td><%= titleCase(role.replace('_', ' ')) %></td>
<td>
  <% if(role === 'user'){ %>
    <a href="/events/new?user_id=<%= id %>" class="btn btn-sm btn-primary">
      Appointment
    </a>
  <% } %>
</td>
<td><a href="/users/<%= id %>/edit" class="btn btn-sm btn-info">Edit</a></td>
<td>
  <% if(role === 'user'){ %>
    <a href="/users/<%= id %>" rel="nofollow" data-method="delete"
            data-confirm="Are you sure?" class="btn btn-sm btn-danger">
      Delete
    </a>
  <% } else { %>
    <a href="/users/<%= id %>/deactivate" rel="nofollow" data-method="delete"
            data-confirm="Are you sure?" class="btn btn-sm btn-danger">
      Deactivate
    </a>
  <% } %>
</td>
